#include "lemipc.h"

int		main(int ac, char **av)
{
  int		team_nb;
  t_player	player;

  if (ac != 3)
    {
      printf("Usage : ./lemipc path_to_key team_nb\n");
      return (1);
    }
  player.key = ftok(av[1]);
  player.team_nb = atoi(av[2]);
  player.first_player = 0;
  printf("key %d\n", player.key);
  if ((player.shm_id = shmget(key, WIDTH * HEIGHT, SHM_W | SHM_R)) == -1)
    {
      player.shm_id = shmget(key, WIDTH * HEIGHT, IPC_CREAT |  SHM_W | SHM_R);
      printf("Creating shm :%d\n", player.shm_id);
      player.first_player = 1;
    }

  return (0);
}
